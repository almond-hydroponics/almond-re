{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
//    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@placeholders/*": ["src/placeholders/*"],
      "@pages/*": ["src/pages/*"],
      "@modules/*": ["src/store/modules/*"],
      "@utils/*": ["src/utils/*"],
      "@atomic": ["src/atomic/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "**/*.test.tsx",
    "nginx",
    "public",
    "jest",
    "src/setupMocks.ts",
    "src/setupEnzyme.ts"
  ]
}
