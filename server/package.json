{
  "name": "almond-be",
  "version": "1.0.0",
  "description": "An IoT application for hydoponics farm",
  "main": "src/app.ts",
  "scripts": {
    "start:client": "cd .. && cd client && yarn start:dev",
    "start:server": "nodemon",
    "start:dev": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd .. && cd client && yarn install && yarn install --only=dev --no-shrinkwrap && yarn run build"
  },
